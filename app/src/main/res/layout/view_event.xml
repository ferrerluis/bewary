<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="0dp"
        card_view:cardBackgroundColor="@color/material_blue_grey_800">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/card_view_layout"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            >

        <!--<ImageView-->
                <!--android:contentDescription="Close the card view"-->
                <!--android:id="@+id/close_card_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingTop="5dp"-->
                <!--android:paddingBottom="5dp"-->
                <!--android:paddingRight="10dp"-->
                <!-- -->
                <!--android:src="@drawable/ic_close"/>-->

        <TextView
                android:layout_width="fill_parent"
                android:textSize="13dp"
                android:textColor="@color/accent_material_light"
                android:layout_height="wrap_content"
                android:id="@+id/event_view_title"/>

        <TextView
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:textSize="16dp"
                android:textColor="#fff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_view_description"/>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        <TextView
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/accent_material_light"
                android:layout_height="wrap_content"
                android:text="Hi there"
                android:id="@+id/event_view_date"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_alignParentRight="true">
                <ImageView
                        android:padding="8dp"
                        android:id="@+id/create_event_comment"
                        android:contentDescription="Make a comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment"/>
                <ImageView
                        android:padding="8dp"
                        android:id="@+id/view_event_comment"
                        android:contentDescription="View all comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu"/>
            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>